<!doctype html>
<html lang="ja">

<header>
<h1>today garbege</h1>
</header>


<% if user_signed_in? %>

<nav>
  <ul>
    <li><%= link_to "新規スケジュール", new_garbage_path %></li>
    <li><%= link_to "スケジュール一覧", new_garbage_path %></li>
    <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
    <li><%= link_to "ごみマニュアル", "https://www.city.kawaguchi.lg.jp/soshiki/01100/040/4/1/1946.html", target: :_blank, rel: "noopener noreferrer" %></li>
  </ul>
</nav>

 <div id="branding">
  <p>welcome、<%= current_user.nick_name + "さん" %></p>
  </div>
  
<% @garbage.each do |garbage| %>

<li class='list'>
<%= link_to garbage.name, edit_garbage_path(garbage.id) %>
</li>

<li class='list'>
<%= garbage.day %>
</li>

<li class='list'>
<%= garbage.dow %>
</li>

<li class='list'>
<%= garbage.category %>
</li>

<li class='list'>
<%= garbage.other %>
</li>

<% end %>
<% else %>
<nav>
  <ul>
    <li><%= link_to "会員登録", new_user_registration_path %></li>
    <li><%= link_to "ログイン", new_user_session_path %></li>
  </ul>
</nav>
<% end %>



